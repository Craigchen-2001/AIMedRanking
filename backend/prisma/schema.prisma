generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paper {
  id                  String     @id
  title               String
  abstract            String?
  keywords            String?
  pdfUrl              String?
  conference          String
  year                Int
  isHealthcare        Boolean    @default(false)
  topic               String?
  method              String?
  application         String?
  codeLink            String?
  datasetNames        String[]   @default([])
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  authors             String[]   @default([])
  reasoning           String?
  affiliations        String?
  authorsAffiliations String?
  datasetLinks        String[]   @default([])
  isPublic            Boolean    @default(false)
  topicAxis1          Json?
  topicAxis2          Json?
  topicAxis3          Json?
  applicationLabels   Json?
  methodLabels        Json?
  favorites           Favorite[]
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  name         String
  passwordHash String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  favorites    Favorite[]
}

model Favorite {
  userId    String
  paperId   String
  createdAt DateTime @default(now())
  paper     Paper    @relation(fields: [paperId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, paperId])
}
